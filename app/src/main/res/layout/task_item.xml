<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content">

    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                  android:orientation="vertical"

                  android:paddingLeft="5dp"
    android:paddingRight="5dp">
        <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                           android:layout_height="70dp">


            <Button
                    android:background="@drawable/empty_circle"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/task_done_status_btn"
                    app:layout_constraintEnd_toStartOf="@+id/guideline2" android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:id="@+id/guideline2"
                                                        app:layout_constraintGuide_begin="73dp"
                                                        android:orientation="vertical"/>
            <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:id="@+id/guideline3"
                                                        android:orientation="vertical"
                                                        app:layout_constraintGuide_end="114dp"/>
            <TextView
                    app:layout_constraintVertical_weight="1"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:text="TextView"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:id="@+id/task_title_txt_view"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/task_date_txt_view"
                    app:layout_constraintStart_toStartOf="@+id/guideline2" android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/guideline3"
                    android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                    app:layout_constraintHorizontal_bias="1.0"/>
            <TextView
                    app:layout_constraintVertical_weight="0.8"
                    android:text="TextView"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:id="@+id/task_date_txt_view"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/task_title_txt_view"
                    app:layout_constraintStart_toStartOf="@+id/task_title_txt_view"
                    app:layout_constraintEnd_toEndOf="@+id/task_title_txt_view"/>
            <Button
                    android:background="@drawable/r2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/task_med_priority_btn"
                    app:layout_constraintTop_toTopOf="@+id/task_low_priority_btn"
                    app:layout_constraintBottom_toBottomOf="@+id/task_low_priority_btn"
                    app:layout_constraintVertical_bias="0.0"
                    app:layout_constraintEnd_toStartOf="@+id/task_high_priority_btn" android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp" app:layout_constraintStart_toEndOf="@+id/task_low_priority_btn"
                    app:layout_constraintHorizontal_bias="0.5"/>
            <Button
                    android:background="@drawable/p1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/task_low_priority_btn" app:layout_constraintStart_toStartOf="@+id/guideline3"
                    android:layout_marginLeft="13dp" android:layout_marginStart="13dp"
                    app:layout_constraintEnd_toStartOf="@+id/task_med_priority_btn" android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp" app:layout_constraintStart_toEndOf="@+id/guideline3"
                    app:layout_constraintHorizontal_bias="0.5" app:layout_constraintHorizontal_chainStyle="spread"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>
            <Button
                    android:background="@drawable/p3"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/task_high_priority_btn"
                    app:layout_constraintTop_toTopOf="@+id/task_med_priority_btn"
                    app:layout_constraintBottom_toBottomOf="@+id/task_med_priority_btn"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
                    app:layout_constraintVertical_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/task_med_priority_btn"
                    app:layout_constraintHorizontal_bias="0.5"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:layout_width="match_parent" android:layout_height="1dp"
        android:background="#555"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>